<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ITRProcess.AddressDetailsActivity">

    <include
        android:layout_width="0dp"
        android:layout_height="@dimen/fifty"
        layout="@layout/app_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"/>


    <RelativeLayout
        android:id="@+id/rl_btnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cont_button"
            android:layout_width="200dp"
            android:layout_height="@dimen/forty"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/fifteen"
            android:layout_marginBottom="@dimen/ten"
            android:background="@drawable/bt_uisquare"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/cont"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_fourteen" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rl_btnContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="@dimen/five"
        android:fillViewport="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            app:cardElevation="0dp">


            <LinearLayout
                android:id="@+id/llProfileContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Flat / Door / Block No."
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size_fourteen" />

                <EditText
                    android:id="@+id/editBlockNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_border"
                    android:drawableLeft="@drawable/ic__account"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_black"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_fourteen"
                    android:hint="Flat / Door / Block No."
                    >

                </EditText>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/roboto"
                    android:text="Building / Village / Premises"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size_fourteen"
                    />

                <EditText
                    android:id="@+id/editBuildingNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_border"
                    android:drawableLeft="@drawable/ic__account"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_black"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_fourteen"
                    android:hint="Building / Village / Premises"
                    >

                </EditText>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/roboto"
                    android:text="Road / Street / Post Office"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size_fourteen" />

                <EditText
                    android:id="@+id/editRoad"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_border"
                    android:drawableLeft="@drawable/ic__account"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_black"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_fourteen"
                    android:hint="Road / Street / Post Office"
                    >

                </EditText>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/roboto"
                    android:text="Area / Locality"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size_fourteen" />

                <EditText
                    android:id="@+id/editArea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_border"
                    android:drawableLeft="@drawable/ic__account"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_black"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_fourteen"
                    android:hint="Area / Locality"
                    >

                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/ten">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/five"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Country"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_fourteen" />

                        <EditText
                            android:id="@+id/editCountry"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/forty"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/text_border"
                            android:drawableLeft="@drawable/ic__account"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size_fourteen"
                            android:textColor="@color/light_black"
                            android:singleLine="true"
                            android:text="India"
                            >

                        </EditText>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="State"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_fourteen" />

                        <EditText
                            android:id="@+id/editState"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/forty"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/text_border"
                            android:drawableLeft="@drawable/ic__account"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size_fourteen"
                            android:textColor="@color/light_black"
                            android:singleLine="true"
                            android:hint="State">

                        </EditText>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/ten">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/five"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Town / City / District"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_fourteen" />

                        <EditText
                            android:id="@+id/editCity"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/forty"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/text_border"
                            android:drawableLeft="@drawable/ic__account"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size_fourteen"
                            android:textColor="@color/light_black"
                            android:singleLine="true"
                            android:hint="Town / City / District">

                        </EditText>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_weight="2.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="PIN code"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_fourteen" />

                        <EditText
                            android:id="@+id/editPin"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/forty"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/text_border"
                            android:drawableLeft="@drawable/ic__account"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size_fourteen"
                            android:textColor="@color/light_black"
                            android:singleLine="true"
                            android:hint="PIN code">

                        </EditText>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>