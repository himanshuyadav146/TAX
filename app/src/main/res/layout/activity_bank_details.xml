<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ITRProcess.BankDetailsActivity">
    <include
        android:layout_width="0dp"
        android:layout_height="@dimen/fifty"
        layout="@layout/app_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rl_btnContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="@dimen/five"
        android:fillViewport="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/llProfileContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/llBankDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:text="@string/bank_details_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_fourteen"/>

                    <EditText
                        android:id="@+id/bankNameFeild"
                        android:ems="10"
                        android:padding="@dimen/twelve"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_border"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="10dp"
                        android:textColor="@color/light_black"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_fourteen"
                        android:inputType="textCapCharacters"
                        />


                    <TextView
                        android:text="@string/bank_details_ifsc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_fourteen"
                        android:layout_marginTop="@dimen/five"/>

                    <EditText
                        android:id="@+id/txtIFSC"
                        android:ems="10"
                        android:padding="@dimen/twelve"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_border"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="10dp"
                        android:textColor="@color/light_black"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_fourteen"
                        android:inputType="textCapCharacters"
                        />


                    <TextView
                        android:text="@string/bank_details_acc_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_fourteen"
                        android:layout_marginTop="@dimen/five"/>

                    <EditText
                        android:id="@+id/edit_ac_no"
                        android:ems="10"
                        android:padding="@dimen/twelve"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_border"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="10dp"
                        android:textColor="@color/light_black"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_fourteen"
                        android:inputType="number"
                        />


                    <TextView
                        android:text="@string/bank_details_acc_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_fourteen"
                        android:layout_marginTop="@dimen/five"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:id="@+id/acc_type_spinner"
                        android:padding="@dimen/five"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_bank_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/five"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </ScrollView>




    <RelativeLayout
        android:id="@+id/rl_btnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cont_button"
            android:layout_width="200dp"
            android:layout_height="@dimen/forty"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/fifteen"
            android:layout_marginBottom="@dimen/ten"
            android:background="@drawable/bt_uisquare"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/cont"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_fourteen" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>