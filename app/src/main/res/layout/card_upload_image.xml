<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/five"
        android:padding="@dimen/five"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/twelve">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:padding="@dimen/five"
                android:text="UPLOAD FORM-16"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_twenty_four">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:fontFamily="@font/roboto"
                android:text="Uploaded form 16 will reviewed by expert. Will get back to you"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_fourteen" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty"
                android:background="@drawable/dotted_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/fifty"
                        android:layout_height="@dimen/fifty"
                        android:background="@drawable/ic_upload_image"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/ten"
                    android:text="Please Select your file from gallery"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_fourteen">


                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginBottom="@dimen/twenty"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnBrowse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_blue_background"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="@dimen/ten"
                        android:text="Browse Files"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_fourteen">

                    </Button>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uploaded Files"
                android:layout_marginTop="@dimen/ten"
                android:textColor="@color/text_blue"
                android:fontFamily="@font/roboto">

            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>